<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thay.test.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Logout"
            android:textColor="@android:color/black"
            android:textSize="12sp"

            />

        <Button
            android:id="@+id/button_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#0000bf"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Find my location"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"

            />

        <Button
            android:id="@+id/button_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#0000bf"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Find all users"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"

            />

        <Button
            android:id="@+id/button_closest_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#0000bf"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Find closest user"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"

            />

        <Button
            android:id="@+id/button_polygon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#0000bf"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Find close users in a delimited area"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"

            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
